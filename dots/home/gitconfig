# Public, safe defaults
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    autocrlf = input
    pager = less -+F

[init]
    defaultBranch = main

[pull]
    ff = only

[merge]
    conflictstyle = zdiff3

[rerere]
    enabled = true

[color]
    ui = auto

[fetch]
    prune = true

[status]
    submoduleSummary = true

[push]
    default = simple

# Optional delta (only used if installed)
[delta]
    features = side-by-side line-numbers
    navigate = true
[interactive]
    diffFilter = delta --color-only
[pager]
    log = delta
    diff = delta
    reflog = delta
    show = delta

